<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@android:color/holo_green_light">

    <TextView
            android:layout_width="133dp"
            android:layout_height="122dp"
            android:text="0"
            android:textSize="80sp"
            android:id="@+id/Counter"
            android:textAlignment="center"
            android:fontFamily="cursive"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/plusButton" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="+"
            android:layout_width="109dp"
            android:layout_height="94dp"
            android:id="@+id/plusButton"
            android:background="@android:drawable/btn_star_big_on"
            tools:ignore="MissingConstraints"
            android:textSize="36sp"
            android:textStyle="bold"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Counter" app:layout_constraintBottom_toTopOf="@+id/minusButton"/>
    <Button
            android:text="-"
            android:layout_width="95dp"
            android:layout_height="93dp"
            android:id="@+id/minusButton"
            android:background="@android:drawable/btn_star_big_on"
            android:textSize="36sp"
            android:textAlignment="center"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/plusButton"/>
    <Button
            android:text="Aplication2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonToTheNextActivity"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@android:drawable/ic_media_play"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="0.011"/>

</android.support.constraint.ConstraintLayout>